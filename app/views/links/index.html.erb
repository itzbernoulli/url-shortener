<h2>ALL URLs</h2>
<br/>
<%= link_to 'Create another link', new_link_path %>
<br/>
<%= link_to 'View top 100 Links', best_hundred_links_path %>
<br/>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">S/No</th>
      <th scope="col">Title</th>
      <th scope="col">Long Url</th>
      <th scope="col">Short Url</th>
      <th scope="col">Click Count</th>
    </tr>
  </thead>

  <tbody>
    <% serial = ((params[:page] || 1).to_i - 1) * 30 %>
    <% @links.each do |link| %>
    <tr class="<%= cycle("table-active", "table-secondary") -%>">

      <th scope="row"> <%= serial += 1 %></th>
      <td><%= link.title %></td>
      <td><%= link.url %></td>
      <td><%= link_to "https://thinly.herokuapp.com/"+link.slug , "https://thinly.herokuapp.com/" +link.slug %></td>
       <td><%= link.clicked %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @links %>
    </div>
    <%= will_paginate @links, :container => false %>
  </div>