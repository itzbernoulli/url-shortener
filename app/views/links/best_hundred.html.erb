
<h2>TOP 100 BOARD</h2>

<%= link_to 'Back Home', root_path %>
<br/>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">S/No</th>
      <th scope="col">Title</th>
      <th scope="col">Long Url</th>
      <th scope="col">Short Url</th>
      <th scope="col">Click Count</th>
    </tr>
  </thead>

  <tbody>
    <% serial = ((params[:page] || 1).to_i - 1) * 20 %>
    <% @links.each do |link| %>
    <tr class="<%= cycle("table-active", "table-secondary") -%>">

      <th scope="row"> <%= serial += 1 %></th>
      <td><%= link.title %></td>
      <td><%= link.url %></td>
      <td><%= link_to ENV['DOMAIN'] +link.slug , ENV['DOMAIN'] +link.slug %></td>
       <td><%= link.clicked %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @links %>
    </div>
    <%= will_paginate @links, :container => false %>
  </div>